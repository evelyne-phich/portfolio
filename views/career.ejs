<!DOCTYPE html>
<html>
  <head>
    <link
      href="https://fonts.googleapis.com/css?family=Roboto"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/global.css" />
    <link rel="stylesheet" href="/css/career-project.css" />
    <link rel="stylesheet" href="<%- activeCareerBackground %>" />
    <title>Evelyne PHICH</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
  </head>

  <body>
    <div class="background"></div>
    <div class="backgroundClosingSideNav" onclick="closeSideNav()"></div>
    <%- include("./partials/sideNav") -%>
    <nav class="navBar">
      <div class="navigation">
        <button class="menuButton" onclick="openSideNav()">
          <img class="menuIcon" src="/images/menu-24px.svg" />
        </button>
      </div>
      <div class="contact">
        <a class="gmail" href="mailto:evelyne.phich@gmail.com">
          <img src="/images/email-24px.svg" alt="Email"
        /></a>
        <a
          target="_blank"
          class="linkedIn"
          href="https://www.linkedin.com/in/evelyne-phich-26464370/"
          ><img src="/images/iconmonstr-linkedin-3.svg" alt="LinkedIn"
        /></a>
      </div>
    </nav>
    <div class="container">
      <div class="date"><%- date %></div>
      <hr />
      <div class="content">
        <div class="companyName" style="color: <%- companyNameColor %>">
          <%- companyName %>
        </div>
        <div class="jobName"><%- jobName %></div>
        <ul class="jobTasks">
          <% jobTasks.map((task)=>{ %>
          <li><%- task %></li>
          <% }) %>
        </ul>
        <% if (typeof school=="string" || typeof degree=="string"){%>
        <hr style="width: 100%; margin: 25px 0" />
        <div class="school"><%- school %></div>
        <div class="degree"><%- degree %></div>
        <% } %>
      </div>
    </div>
    <footer class="pagination">
      <a
        class="<% if (activePageNumber===5) { %>active <% } %>"
        href="/career/5"
      ></a>
      <a
        class="<% if (activePageNumber===4) { %>active <% } %>"
        href="/career/4"
      ></a>
      <a
        class="<% if (activePageNumber===3) { %>active <% } %>"
        href="/career/3"
      ></a>
      <a
        class="<% if (activePageNumber===2) { %>active <% } %>"
        href="/career/2"
      ></a>
      <a
        class="<% if (activePageNumber===1) { %>active <% } %>"
        href="/career/1"
      ></a>
    </footer>
    <script src="/js/index.js"></script>
  </body>
</html>
